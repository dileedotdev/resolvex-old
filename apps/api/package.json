{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "concurrently \"wrangler dev --port 3001\" \"tsc --watch --emitDeclarationOnly\" \"tsc-alias --watch\"",
    "build": "concurrently \"tsc --emitDeclarationOnly\" \"tsc-alias\"",
    "lint": "eslint --ignore-path=.gitignore .",
    "lint:fix": "eslint --fix --ignore-path=.gitignore .",
    "type:check": "tsc --noEmit",
    "format": "prettier --write --ignore-path=.gitignore .",
    "format:check": "prettier --check --ignore-path=.gitignore ."
  },
  "dependencies": {
    "@trpc/server": "^10.34.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230628.0",
    "@resolvex/eslint-config": "workspace:^",
    "@resolvex/prettier-config": "workspace:^",
    "concurrently": "^8.2.0",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6",
    "wrangler": "^3.1.1"
  }
}
