{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {},
    "lint:fix": {},
    "type:check": {
      "dependsOn": ["^build"]
    },
    "format": {},
    "format:check": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
